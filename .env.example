# =============================================================================
#  QUICKBOM ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# For development, also create .env.local for development-specific settings
# DO NOT commit .env to version control - it contains sensitive data
# =============================================================================

# -----------------------------------------------------------------------------
#  APPLICATION CONFIGURATION
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_NAME="QuickBom - Construction Management"

# -----------------------------------------------------------------------------
#  DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# Local PostgreSQL for development
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# Supabase PostgreSQL for production (get from Supabase dashboard)
SUPABASE_DATABASE_URL="postgresql://postgres.[password]@db.[project-ref].supabase.co:5432/postgres?pgbouncer=true&connection_limit=1"

# -----------------------------------------------------------------------------
#  AUTHENTICATION & SECURITY
# -----------------------------------------------------------------------------
# JWT secret for token signing (generate with: openssl rand -base64 32)
JWT_SECRET="your-secure-jwt-secret-here"

# -----------------------------------------------------------------------------
#  SUPABASE CONFIGURATION
# -----------------------------------------------------------------------------
# Get these from: https://supabase.com/dashboard/project/[your-project]/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project-ref.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key-here"
SUPABASE_JWT_SECRET="your-supabase-jwt-secret-here"

# -----------------------------------------------------------------------------
#  FILE STORAGE CONFIGURATION
# -----------------------------------------------------------------------------
SUPABASE_STORAGE_BUCKET="quickbom-uploads"
SUPABASE_STORAGE_USER_FOLDER="user_files"
SUPABASE_STORAGE_PROJECT_FOLDER="project_files"

# -----------------------------------------------------------------------------
#  OPTIONAL: PRODUCTION OPTIMIZATIONS
# -----------------------------------------------------------------------------
# Set to "production" in production environment
# NODE_ENV="production"

# Disable Next.js telemetry in production
# NEXT_TELEMETRY_DISABLED=1

# -----------------------------------------------------------------------------
#  SETUP INSTRUCTIONS
# -----------------------------------------------------------------------------
# 1. Copy this file to .env
# 2. Fill in all the required values above
# 3. For development: create .env.local with NODE_ENV="development"
# 4. For production: set NODE_ENV="production" in your deployment platform
# 5. Database URL is automatically selected based on NODE_ENV
